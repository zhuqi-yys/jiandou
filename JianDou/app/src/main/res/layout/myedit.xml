<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="10dip"
    android:gravity="clip_horizontal">

    <EditText
        android:id="@+id/info_edit"
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:textSize="18sp"
        android:scrollHorizontally="true"
        android:autoText="false"
        android:capitalize="none"
        android:textAppearance="?android:attr/textAppearanceMedium"
        android:singleLine="true"
        android:hint="测试步骤描述"
        />
    <TextView
        android:gravity="left"
        android:id="@+id/myedit_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="异常严重程度:"/>
    <RadioGroup android:id="@+id/radioGroup_edit" android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="horizontal">
        <RadioButton android:checked="true" android:id="@+id/btn_minor" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="次要" />
        <RadioButton android:id="@+id/btn_major" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="一般" />
        <RadioButton android:id="@+id/btn_critical" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="严重" />
        <RadioButton android:id="@+id/btn_blocker" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="崩溃" />
    </RadioGroup>
    <TextView
        android:gravity="left"
        android:id="@+id/myedit_text2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="异常类型"/>
    <RadioGroup android:id="@+id/radioGroup_edititem" android:layout_height="wrap_content" android:layout_width="wrap_content" android:orientation="horizontal">
        <RadioButton android:checked="true" android:id="@+id/btn_method" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="功能" android:textSize="10dp"/>
        <RadioButton android:id="@+id/btn_picui" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="布局" android:textSize="10dp"/>
        <RadioButton android:id="@+id/btn_picsafe" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="安全" android:textSize="10dp"/>
        <RadioButton android:id="@+id/btn_picperform" android:layout_height="wrap_content" android:layout_width="wrap_content" android:text="性能" android:textSize="10dp"/>
    </RadioGroup>
</LinearLayout>
